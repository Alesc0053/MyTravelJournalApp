<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTravelJournal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyTravelJournal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/purple_500</item>
        <item name="postSplashScreenTheme">@style/Theme.MyTravelJournal.NoActionBar</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo</item>
    </style>

    <!-- asta e secundara -->
    <style name="Theme.MyApp.Splash" parent="Theme.MyTravelJournal">
        <item name="android:windowSplashScreenBackground">@color/purple_500</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
    </style>


    <style name="Theme.MyTravelJournal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyTravelJournal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
  <!-- Base application theme. -->
    <style name="Base.Theme.MyTravelJournal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>